<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lambda.prototypetralp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.hardware.camera" />
    <uses-permission android:name="android.hardware.camera.autofocus" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <supports-gl-texture android:name="GL_OES_compressed_ETC1_RGB8_texture" />
    <supports-gl-texture android:name="GL_OES_compressed_paletted_texture" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.lambda.prototypetralp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.lambda.prototypetralp.EditMessage"
            android:label="@string/title_activity_edit_message"
            android:parentActivityName="com.lambda.prototypetralp.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lambda.prototypetralp.MainActivity" />
        </activity>
        <activity
            android:name="com.lambda.prototypetralp.DisplaySentMessage"
            android:label="@string/title_activity_display_sent_message"
            android:parentActivityName="com.lambda.prototypetralp.EditMessage" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lambda.prototypetralp.EditMessage" />
        </activity>
    </application>

</manifest>
